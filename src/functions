#!/usr/bin/env bash

################################################################################
############################### Global variables ###############################
################################################################################

_ip_list=()
_ip_amount=""
_ip=""


################################################################################
######################## Definitions of user functions #########################
################################################################################

# ``````````````````````````````````````````````````````````````````````````````
# Function name: _init_cli()
#
# Description:
#   Starting the Dracnmap command interpreter.
#
# Usage:
#   _init_cli
#
# Examples:
#   _init_cli
#

function _init_cli() {

  local _FUNCTION_ID="_init_cli"
  local _STATE=0

  input_array=()

  while [ "${input_array[0]}" != "exit" ] ; do

    cstate="1"

    __cli_banner="dracmap-v2"

    printf "\e[1;31m%s\e[m " "${__cli_prompt}${__cli_banner}>" && read -ra input_array

    case ${input_array[0]} in

      01|1)

        _get_ip

        if [[ $? -eq 0 ]] ; then

          $xterm $_ip

        fi

        cstate=1
        ;;

      02|2)

        echo -en $cyan""
        echo -en "How many addresses do you want to scan? " ; tput sgr0
        read -ra _ip_amount

        for i in $(seq 1 $_ip_amount) ; do

          _get_ip
          _ip_list+=("$_ip")

        done

        if [[ $? -eq 0 ]] ; then

          $xterm ${_ip_list[@]}

        fi

        cstate=1
        ;;

      03|3)

        _get_ip

        if [[ $? -eq 0 ]] ; then

          $xterm -sV -T4 -O -F --version-light 1 $_ip

        fi

        cstate=1
        ;;

      04|4)

        _get_ip

        if [[ $? -eq 0 ]] ; then

          $xterm -sA $_ip

        fi

        cstate=1
        ;;

      05|5)
        echo -e $cyan""
        echo -ne "  What is your IP Target or Host: " ; tput sgr0
        read ip
        $xterm -sS -P0 $ip &
        ;;
      06|6)
        pingbebeb
        ;;
      07|7)
        WebService
        ;;
      08|8)
        nse
        ;;
      09|9)
        zenmapscript
        ;;
      10)
        scanoutput
        ;;
      11)
        credits
        ;;
      help)
        if [ ${input_array[1]} ] ; then
          case ${input_array[1]} in

            show)
              true ;;
            *)
              if [[ ${input_array[1]} == `echo ${loaded_modules_array[*]} | grep -o ${input_array[1]}` ]] ; then
                true
              else
                true
              fi
              ;;
          esac

        else true ; fi
        cstate="0" ;;
      show)
        if [ ${input_array[1]} ] ; then
          case ${input_array[1]} in

            version)
              true ;;
            modules)
              true ;;
            *)
              true ;;
          esac

        else
          true
        fi
        cstate="0" ;;
      clear)
        menu
        cstate="0" ;;
      exit)
        clear
        sleep 1
        echo ""
        echo -e $yellow"[*] Thank You For Using Dracnmap  =)."
        echo ""
        echo -e $yellow"[*] Check Dracos Linux LFS, Penetration OS From Indonesia  =P."
        cstate="0" ;;
      "")
        echo -en ""
        cstate="0" ;;
      *)
        for (( j = 0 ; j < ${#loaded_modules_array[*]} ; j++ )) ; do

          if [ "${loaded_modules_array[${j}]}" == "${input_array[0]}" ] ; then

            true && cstate="0"

          fi

        done

        if [ "$cstate" -eq "1" ] ; then

          printf "stdout: unknown command\n" ; fi

      ;;

    esac

  done

  return $_STATE

}

