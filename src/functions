# ``````````````````````````````````````````````````````````````````````````````
# Function name: _get_ip()
#
# Description:
#   Gets the IP address.
#
# Usage:
#   _get_ip
#
# Examples:
#   _get_ip
#

function _get_ip() {

  local _FUNCTION_ID="_get_ip"
  local _STATE=0

  echo -en $cyan""
  echo -en "What is your IP Target or Host: " ; tput sgr0
  read -ra _ip

  if [[ $_ip =~ ^[0-9]+\.[0-9]+\.[0-9]+\.[0-9]+$ ]] ; then

    _STATE=0

  else

    printf "%s\n" "invalid ip address"
    _STATE=1

  fi

  return $_STATE

}
